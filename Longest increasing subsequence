#include<iostream>
using namespace std;
#include<vector>

int bs( vector<int> arr,int x){
    int s=0;
    int e=arr.size()-1;
    int mid=s+(e-s)/2;
    while(s<e){
      if (x < arr[mid]) {
           e=mid;
      }
      else if(x>arr[mid]){
           s=mid+1;
      }
      int mid=s+(e-s)/2;
    }
    return mid;
}


int longestIncreasingSubsequence(int arr[], int n)
{
    vector<int> ans;
    ans.push_back(arr[0]);
    int index=0;
    for(int i=1;i<n;i++){
       if(ans[index]<arr[i]){
           ans.push_back(arr[i]);
           index++;
       }
       else{
           int nn=bs(ans,arr[i]);
           ans[nn]=arr[i];
       }
    }
    return ans.size();

}
